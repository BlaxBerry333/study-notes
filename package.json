{
  "name": "study-notes",
  "version": "1.0.0",
  "type": "module",
  "description": "Personal notes app built with VitePress, featuring a Warhammer 40K Cogitator cyberpunk theme.",
  "keywords": [
    "vitepress",
    "vue",
    "documentation"
  ],
  "author": "Chen",
  "license": "MIT",
  "scripts": {
    "dev": "vitepress dev docs --open",
    "build": "vitepress build docs",
    "preview": "vitepress preview docs",
    "check": "biome check . && cspell \"**/*.{ts,vue,md,json}\"",
    "check:fix": "biome check --write .",
    "check:spell": "cspell \"**/*.{ts,vue,md,json}\"",
    "format": "biome format --write .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,vue,json,md}": [
      "biome format --write --no-errors-on-unmatched",
      "biome check --no-errors-on-unmatched"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^25.0.3",
    "cspell": "^9.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.9.3",
    "vitepress": "~1.6.0",
    "vue": "^3.5.26"
  }
}
